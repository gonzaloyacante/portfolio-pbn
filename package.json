{
  "name": "portfolio-pbn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clean": "rm -rf .next node_modules",
    "fresh": "npm run clean && pnpm install && npx prisma generate",
    "type-check": "npx tsc --noEmit",
    "check:all": "npm run type-check && npm run lint",
    "verify": "npm run check:all && npm run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "validate:env": "npx tsx scripts/validate-env.ts",
    "db:migrate": "npx tsx scripts/migrate.ts",
    "pre-commit": "npx tsx scripts/pre-commit-checks.ts",
    "stress:seed": "npx tsx scripts/seed-stress-test.ts",
    "stress:clean": "npx tsx scripts/delete-test-data.ts",
    "db:seed": "npx tsx scripts/seed-dev.ts",
    "db:seed:admin": "npx tsx scripts/seed-admin-dev.ts",
    "db:seed:prod": "npx tsx scripts/seed-admin-prod.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "6.19.0",
    "@sentry/nextjs": "^10.38.0",
    "bcryptjs": "^3.0.3",
    "prisma": "6.19.0",
    "cloudinary": "^2.9.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.29.2",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "nprogress": "^0.2.0",
    "pg": "^8.17.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.9.1",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.0.10",
    "@types/nprogress": "^0.2.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "sharp"
    ]
  },
  "packageManager": "pnpm@10.28.0"
}
