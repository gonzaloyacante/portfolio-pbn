{
  "name": "portfolio-pbn-monorepo",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "web:dev": "yarn --cwd web dev",
    "web:build": "yarn --cwd web build",
    "web:lint": "yarn --cwd web lint",
    "web:format": "yarn --cwd web format:check",

    "api:dev": "yarn --cwd api dev",
    "api:build": "yarn --cwd api build",

    "build": "yarn web:build && yarn api:build",
    "format": "yarn web:format",
    "lint": "yarn web:lint"
  }
}
