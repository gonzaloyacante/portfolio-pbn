{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@types/node", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./src/*"],
      "@/generated/*": ["./prisma/generated/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
